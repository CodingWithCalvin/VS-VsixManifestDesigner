<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0">

    <!--
    Badge Styles
    Theme-aware styles for SDK/VsixSdk badges and warning/info boxes.
    -->

    <!-- SDK Badge Style (Blue accent) -->
    <Style x:Key="SdkBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource {x:Static vs:VsBrushes.AccentMediumKey}}" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="Margin" Value="8,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- SDK Badge Text Style -->
    <Style x:Key="SdkBadgeTextStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="SDK" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- VsixSdk Badge Style (Green accent) -->
    <Style x:Key="VsixSdkBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="#107C10" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="Margin" Value="4,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- VsixSdk Badge Text Style -->
    <Style x:Key="VsixSdkBadgeTextStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="VsixSdk" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!-- Warning Box Style -->
    <Style x:Key="WarningBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource {x:Static vs:VsBrushes.InfoBackgroundKey}}" />
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vs:VsBrushes.AccentMediumKey}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <!-- Warning Box Text Style -->
    <Style x:Key="WarningBoxTextStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
    </Style>

    <!-- Info Box Style -->
    <Style x:Key="InfoBoxStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource {x:Static vs:VsBrushes.InfoBackgroundKey}}" />
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowBorderKey}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <!-- Info Box Text Style -->
    <Style x:Key="InfoBoxTextStyle" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
    </Style>

</ResourceDictionary>
