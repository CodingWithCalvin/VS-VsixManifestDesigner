<UserControl x:Class="CodingWithCalvin.VsixManifestDesigner.Views.MetadataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CodingWithCalvin.VsixManifestDesigner.ViewModels"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ManifestViewModel}"
             d:DesignHeight="500" d:DesignWidth="700"
             Background="{DynamicResource {x:Static vs:VsBrushes.ToolWindowBackgroundKey}}"
             Foreground="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CodingWithCalvin.VsixManifestDesigner;component/Themes/ThemeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
        <Grid Margin="{StaticResource PanelMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ID (Required) -->
            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource RequiredFieldLabelStyle}" Content="ID:" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1"
                     Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                     Style="{StaticResource ValidatingTextBoxStyle}"
                     Margin="{StaticResource FormFieldMargin}"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

            <!-- Version (Required) -->
            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource RequiredFieldLabelStyle}" Content="Version:" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="{Binding Version, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                     Style="{StaticResource ValidatingTextBoxStyle}"
                     Margin="{StaticResource FormFieldMargin}"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

            <!-- Publisher (Required) -->
            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource RequiredFieldLabelStyle}" Content="Publisher:" VerticalAlignment="Center" />
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                     Style="{StaticResource ValidatingTextBoxStyle}"
                     Margin="{StaticResource FormFieldMargin}"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

            <!-- Display Name (Required) -->
            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource RequiredFieldLabelStyle}" Content="Display Name:" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                     Style="{StaticResource ValidatingTextBoxStyle}"
                     Margin="{StaticResource FormFieldMargin}"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

            <!-- Description (Required) -->
            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource RequiredFieldLabelStyle}" Content="Description:" VerticalAlignment="Top" Margin="0,4,0,0" />
            <TextBox Grid.Row="4" Grid.Column="1"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                     Style="{StaticResource ValidatingTextBoxStyle}"
                     Margin="{StaticResource FormFieldMargin}"
                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />

            <!-- Language -->
            <Label Grid.Row="5" Grid.Column="0" Content="Language:" VerticalAlignment="Center" />
            <TextBox Grid.Row="5" Grid.Column="1"
                     Text="{Binding Language, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- More Info URL -->
            <Label Grid.Row="6" Grid.Column="0" Content="More Info URL:" VerticalAlignment="Center" />
            <TextBox Grid.Row="6" Grid.Column="1"
                     Text="{Binding MoreInfo, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- License -->
            <Label Grid.Row="7" Grid.Column="0" Content="License:" VerticalAlignment="Center" />
            <TextBox Grid.Row="7" Grid.Column="1"
                     Text="{Binding License, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- Icon -->
            <Label Grid.Row="8" Grid.Column="0" Content="Icon:" VerticalAlignment="Center" />
            <TextBox Grid.Row="8" Grid.Column="1"
                     Text="{Binding Icon, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- Preview Image -->
            <Label Grid.Row="9" Grid.Column="0" Content="Preview Image:" VerticalAlignment="Center" />
            <TextBox Grid.Row="9" Grid.Column="1"
                     Text="{Binding PreviewImage, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- Tags -->
            <Label Grid.Row="10" Grid.Column="0" Content="Tags:" VerticalAlignment="Center" />
            <TextBox Grid.Row="10" Grid.Column="1"
                     Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- Getting Started Guide -->
            <Label Grid.Row="11" Grid.Column="0" Content="Getting Started:" VerticalAlignment="Center" />
            <TextBox Grid.Row="11" Grid.Column="1"
                     Text="{Binding GettingStartedGuide, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />

            <!-- Release Notes -->
            <Label Grid.Row="12" Grid.Column="0" Content="Release Notes:" VerticalAlignment="Center" />
            <TextBox Grid.Row="12" Grid.Column="1"
                     Text="{Binding ReleaseNotes, UpdateSourceTrigger=PropertyChanged}"
                     Margin="{StaticResource FormFieldMargin}" />
        </Grid>
    </ScrollViewer>
</UserControl>
