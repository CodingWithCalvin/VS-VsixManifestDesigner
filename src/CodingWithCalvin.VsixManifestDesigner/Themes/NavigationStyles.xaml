<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
                    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging">

    <!-- Content Area Container Style -->
    <Style x:Key="ContentAreaStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowBackgroundKey}}" />
        <Setter Property="Padding" Value="24" />
    </Style>

    <!-- Page Header Container Style -->
    <Style x:Key="PageHeaderContainerStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Margin" Value="0,0,0,24" />
    </Style>

    <!-- Page Header Row Style (icon + title) -->
    <Style x:Key="PageHeaderRowStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <!-- Page Header Icon Style -->
    <Style x:Key="PageHeaderIconStyle" TargetType="imaging:CrispImage">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Page Header Title Style -->
    <Style x:Key="PageHeaderTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="12,0,0,0" />
    </Style>

    <!-- Page Header Description Style -->
    <Style x:Key="PageHeaderDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.GrayTextKey}}" />
        <Setter Property="Margin" Value="36,4,0,0" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Section Container Style -->
    <Style x:Key="SectionContainerStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,24" />
    </Style>

    <!-- Section Title Style -->
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Form Field Container Style -->
    <Style x:Key="FormFieldContainerStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <!-- Form Field Label Style (for stacked layout) -->
    <Style x:Key="FormFieldLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Required Field Indicator Style -->
    <Style x:Key="RequiredIndicatorStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="*" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.AccentMediumKey}}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="2,0,0,0" />
    </Style>

</ResourceDictionary>
