<UserControl x:Class="CodingWithCalvin.VsixManifestDesigner.Views.MetadataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CodingWithCalvin.VsixManifestDesigner.ViewModels"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ManifestViewModel}"
             d:DesignHeight="500" d:DesignWidth="700"
             Background="{DynamicResource {x:Static vs:VsBrushes.ToolWindowBackgroundKey}}"
             Foreground="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vs:VsBrushes.ToolWindowTextKey}}" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10"
                  Background="{DynamicResource {x:Static vs:VsBrushes.ToolWindowBackgroundKey}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ID -->
            <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Version -->
            <Label Grid.Row="1" Grid.Column="0" Content="Version:" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Publisher -->
            <Label Grid.Row="2" Grid.Column="0" Content="Publisher:" VerticalAlignment="Center" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Publisher, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Display Name -->
            <Label Grid.Row="3" Grid.Column="0" Content="Display Name:" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Description -->
            <Label Grid.Row="4" Grid.Column="0" Content="Description:" VerticalAlignment="Top" Margin="0,5,0,0" />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" />

            <!-- Language -->
            <Label Grid.Row="5" Grid.Column="0" Content="Language:" VerticalAlignment="Center" />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Language, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- More Info URL -->
            <Label Grid.Row="6" Grid.Column="0" Content="More Info URL:" VerticalAlignment="Center" />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding MoreInfo, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- License -->
            <Label Grid.Row="7" Grid.Column="0" Content="License:" VerticalAlignment="Center" />
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding License, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Icon -->
            <Label Grid.Row="8" Grid.Column="0" Content="Icon:" VerticalAlignment="Center" />
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Icon, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Preview Image -->
            <Label Grid.Row="9" Grid.Column="0" Content="Preview Image:" VerticalAlignment="Center" />
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding PreviewImage, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Tags -->
            <Label Grid.Row="10" Grid.Column="0" Content="Tags:" VerticalAlignment="Center" />
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Tags, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Getting Started Guide -->
            <Label Grid.Row="11" Grid.Column="0" Content="Getting Started:" VerticalAlignment="Center" />
            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding GettingStartedGuide, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />

            <!-- Release Notes -->
            <Label Grid.Row="12" Grid.Column="0" Content="Release Notes:" VerticalAlignment="Center" />
            <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding ReleaseNotes, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,5" />
        </Grid>
    </ScrollViewer>
</UserControl>
